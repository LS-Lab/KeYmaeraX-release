Variables.
  T s.
  T t.
  P a.
  P b.
  F p.
  F q.
  F H.
End.

Axiom "[:=] assignment".
  [x:=t]p(x) <-> p(t)
End.

Axiom "<:=> assignment".
  <x:=t>p(x) <-> p(t)
End.

Axiom "[:=] assignment equal".
  [x:=t]p(x) <-> \forall x . (x=t -> p(x))
End.

Axiom "[:*] assignment".
  [x:=*]p(x) <-> \forall x. p(x)
End.

Axiom "<:*> assignment".
  <x:=*>p(x) <-> \exists x. p(x)
End.

Axiom "[?] test".
  [?H]p <-> (H -> p).
End.

Axiom "<?> test".
  <?H>p <-> (H & p).
End.

Axiom "[++] choice".
  [a ++ b]p <-> ([a]p & [b]p).
End.

Axiom "<++> choice".
   <a ++ b>p <-> (<a>p | <b>p).
End.

Axiom "[;] compose".
  [ a; b ]p <-> [a][b]p.
End.

Axiom "<;> compose".
  < a; b >p <-> <a><b>p.
End.

Axiom "[*] unwind".
  [a*]p <-> (p & [a][a*] p).
End.

Axiom "<*> unwind".
  <a*>p <-> (p | <a><a*> p).
End.

Axiom "K modal modus ponens".
  [a](p->q) -> (([a]p) -> ([a]q))
End.

Axiom "I induction".
  (p & [a*](p -> [a] p)) -> [a*]p
End.

Axiom "B- converse Barcan".
  ([a] \forall x. p(x)) -> \forall x. [a] p(x)
End.

Axiom "Quantifier Instantiation".
  \forall x. p(x) -> p(t)
End.

